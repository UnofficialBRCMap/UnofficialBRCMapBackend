// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  uid               String  @unique
  string            String?
  frontage          String?
  intersection      String?
  intersection_type String?
  dimensions        String?
  hour              Int?
  minute            Int?
  distance          Int?
  category          String?
  gps_latitude      Float?
  gps_longitude     Float?
  location          Camp?   @relation(fields: [uid], references: [uid])
  location_art      Art?    @relation(fields: [location_art_uid], references: [uid])
  location_art_uid  String  @unique

  @@id([uid, location_art_uid])
  @@map("locations")
}

model Camp {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  year          Int
  name          String
  url           String?
  contact_email String?
  hometown      String?
  description   String?
  locations     Location[]

  @@map("camps")
}

model Art {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  year                 Int
  name                 String
  url                  String?
  contact_email        String?
  hometown             String?
  description          String?
  artist               String?
  category             String?
  program              String?
  donation_link        String?
  guided_tours         Int?
  self_guided_tour_map Int?
  thumbnail_url        String?
  location             Location?

  @@map("arts")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName            String?
  lastName             String?
  role                 Role      @default(USER)
  email                String    @unique
  phone                String?
  hash                 String
  allowMultiple        Boolean   @default(false)
  resetPasswordToken   String?   @unique
  resetPasswordExpires DateTime?

  @@map("users")
}

enum Role {
  ADMIN
  MANAGER
  USER
}
